<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=, initial-scale=1.0">
    <title>
        <%- title%> 
    </title>
    <link rel="stylesheet" href="/css/alerta.css">
    <link rel="stylesheet" href="/css/bootstrap.css">
</head>

<body>
    <div id="alerta" class="alerta <%- msg%>">
        Operação bem sucedida!
    </div>

    <div class="container">
        <%- include("../partials/menu.ejs")%>
            <h1 style="text-align: center;">Listagem de clientes</h1>
            <hr>
            <a class="btn btn-success" href="/cliente/cadastrar/">Cadastrar</a>
            <br>
            <br>
            <% if (clientes.length > 0) { %>
                <% clientes.forEach(cliente => { %>

                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"> <%= cliente.nome%> </h5>
                            <p class="card-text">
                                <b>E-mail: </b>
                                <%= cliente.email%>
                            </p>
                            <p class="card-text">
                                <b>Senha: </b>
                                <%= cliente.senha%>
                            </p>
                            <p class="card-text">
                                <b>CPF: </b>
                                <%= cliente.cpf%>
                            </p>
        
                            <a class="btn btn-warning" href="/cliente/cadastrar/<%= cliente.id%>">Editar</a>
                            <a class="btn btn-danger" href="/cliente/remover/<%= cliente.id%>">Remover</a>
                        </div>
                    </div>

                    <% }) %>
            <% } else { %>
                Não há dados de clientes.
                <% } %>
    </div>
    <script src="/js/bootstrap.bundle.js"></script>

    <script type="text/javascript">
        setTimeout(() => {
            var alerta = document.getElementById("alerta");
            alerta.className = "alerta";
        }, 3000);
    </script>

</body>

</html>